<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">
    <!--
        Added the constraints for entity Items.
    -->
    <changeSet id="20191124122538-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="related_design_id"
                                 baseTableName="items"
                                 constraintName="fk_items_related_design_id"
                                 referencedColumnNames="id"
                                 referencedTableName="designs"/>

        <addForeignKeyConstraint baseColumnNames="related_product_id"
                                 baseTableName="items"
                                 constraintName="fk_items_related_product_id"
                                 referencedColumnNames="id"
                                 referencedTableName="products"/>

        <addForeignKeyConstraint baseColumnNames="location_id"
                                 baseTableName="items"
                                 constraintName="fk_items_location_id"
                                 referencedColumnNames="id"
                                 referencedTableName="location"/>

        <addForeignKeyConstraint baseColumnNames="unit_of_measurements_id"
                                 baseTableName="items"
                                 constraintName="fk_items_unit_of_measurements_id"
                                 referencedColumnNames="id"
                                 referencedTableName="unit_of_measurements"/>

        <addForeignKeyConstraint baseColumnNames="currency_id"
                                 baseTableName="items"
                                 constraintName="fk_items_currency_id"
                                 referencedColumnNames="id"
                                 referencedTableName="currency"/>

    </changeSet>
</databaseChangeLog>
